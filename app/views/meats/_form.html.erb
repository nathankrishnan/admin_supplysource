<%= form_for @meat do |f| %>

	<%if @meat.errors.any? %>
		<div id="error_explanation">
		    <div class="alert alert-danger fade in">
		      The form contains <%= pluralize(@meat.errors.count, "error") %>.
		    </div>
			<ul>
			<% @meat.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>


	<fieldset>
		<legend><%=@meat.name%></legend>

		<!-- NAME -->
		<div class="form-block">
			<%= f.label :name %>
			<div class="col-lg-10">
				<%= f.text_field :name, class: "form-control", placeholder: "Enter product name" %>
			</div>
		</div>


		<!-- SUPPLIER -->
		<div class="form-block">
			<%= f.label :supplier_id %>
			<div class="col-lg-10">
				<%= f.collection_select :supplier_id, Supplier.all, :id, :name, include_blank: true %>
			</div>
		</div>


		<!-- THUMBNAIL -->
		<div class="form-block">
			<%= f.label :thumbnail %>
			<div class="col-lg-10">
				<%= f.file_field :thumbnail, class: "file-upload" %>
			</div>
		</div>

		<div class="form-block">

			<!-- ANTIBIOTIC FREE -->
			<div class="checkbox-block">
				<div class="checkbox">
					<%= f.label :ab_free %>
					<%= f.check_box :ab_free %>
				</div>
			</div>

			<!-- HORMONE FREE -->
			<div class="checkbox-block">
				<div class="checkbox">
					<%= f.label :hormone_free %>
					<%= f.check_box :hormone_free %>
				</div>
			</div>

			<!-- WILD CAUGHT -->
			<div class="checkbox-block">
				<div class="checkbox">
					<%= f.label :wild_caught %>
					<%= f.check_box :wild_caught %>
				</div>
			</div>

			<!-- FARM GROWN -->
			<div class="checkbox-block">
				<div class="checkbox">
					<%= f.label :farm_grown %>
					<%= f.check_box :farm_grown %>
				</div>
			</div>

			<!-- ARTIFICIAL COLOR -->
			<div class="checkbox-block">
				<div class="checkbox">
					<%= f.label :artificial_color %>
					<%= f.check_box :artificial_color %>
				</div>
			</div>

		</div>

		<!-- DESCRIPTION -->
		<div class="form-block">
			<%= f.label :description %>
			<div class="col-lg-10">
				<%= f.text_area :description, rows: 3, class: "form-control" %>
			</div>
		</div>

		<!-- GROWTH CONDITIONS -->
		<div class="form-block">
			<%= f.label :growth_conditions %>
			<div class="col-lg-10">
				<%= f.text_area :growth_conditions, rows: 3, class: "form-control" %>
			</div>
		</div>

		<div class="form-block">
			<div class="col-lg-2"></div>
			<div class="col-lg-10">
				<%= f.submit "Submit", class: "btn btn-lg btn-default" %>
			</div>
		</div>
	
	</fieldset>

<% end %>

