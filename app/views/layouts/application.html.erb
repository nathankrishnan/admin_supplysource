<!DOCTYPE html>
<html>
<head>
  <title>AdminSupplysource</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	<div class="container">

		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>

		<%= link_to "SUPPLYSOURCE", root_url, class: "navbar-brand" %>

		<!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav navbar-right">
           	
           	<!-- checks to see if the user is logged by seeing if current_user returns true -->
          	<% if current_user %>

	          	<li  class="dropdown">
	          		<%= link_to "#", class: "dropdown-toggle", data:{toggle: "dropdown"}  do%>Products <b class="caret"></b><%end%>
	          		<ul class="dropdown-menu">
	          			<li><%= link_to "Meat", meats_path %></li>
	          			<li><%= link_to "Produce", "#" %></li>
	          			<li><%= link_to "Dairy", "#" %></li>
	          		</ul>
	          	</li>

	           	<li  class="dropdown">
	           		<%= link_to "#", class: "dropdown-toggle", data:{toggle: "dropdown"}  do%>Metrics <b class="caret"></b><%end%>
	           		<ul class="dropdown-menu">
	           			<li><%= link_to "Wastage", "#" %></li>
	           			<li><%= link_to "Score Breakdown", "#" %></li>
	          			<li><%= link_to "Prices", "#" %></li>
	          		</ul>
	           	</li>

	           	<li>
					<%= link_to "Suppliers", "#" %>
				</li>

				<li>
					<%= link_to "Log out", logout_path %>
				</li>

			<!-- navbar to display if user is not logged in -->
			<% else %>

				<li><%= link_to "Sign up", new_user_path %></li>
				<li><%= link_to "Log in", login_path %></li>

			<% end %>

          </ul>
        </div><!-- /.navbar-collapse -->
	</div>
</nav>


<div class="container">

	<% if flash.any? %>
	    <% flash.each do |key, value| %>
			<div class="alert alert-<%= key %> fade in">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= value %>	
			</div>
		<% end %>
	<% end %>

<%= yield %>


</div>


</body>
</html>
